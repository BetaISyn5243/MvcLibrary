@using MvcLibrary.Models.Entity;
@model List<TBLANNOUNCEMENT>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>İçerik</th>
    </tr>
   @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.CATEGORY</td>
            <td>@Convert.ToDateTime(prs.DATE).ToString("dd/MM/yyyy")</td>
            <td>@prs.CONTENTS</td>            
        </tr>
    }
</table>
