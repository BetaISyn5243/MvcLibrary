@model MvcLibrary.Models.Entity.TBLMEMBER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MembersLayout.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

@using (Html.BeginForm("UpdatePassword", "Panel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder"> Mail Adresi: </label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                <strong>Ad: </strong>
                @Html.TextBoxFor(x => x.NAME, new { @class = "form-control", @readonly = "readonly"})
            </td>
        </tr>
        <tr>
            <td>
                <strong>Soyad: </strong>
                @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control", @readonly = "readonly" })
            </td>
        </tr>
        <tr>
            <td>
                <strong>Kullanıcı Adı: </strong>
                @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control", @readonly = "readonly" })
            </td>
        </tr>
        <tr>
            <td>
                <strong>Şifre: </strong> @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control",  })
            </td>
        </tr>

        <tr>
            <td>  <strong>Okul: </strong> @Html.TextBoxFor(x => x.SCHOOL, new { @class = "form-control", @readonly = "readonly" })</td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}