@model MvcLibrary.Models.Entity.TBLAUTHOR
@{
    ViewBag.Title = "GetAuthor";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateAuthor", "Author", FormMethod.Post))
            {
        <div class="form-group container-fluid p-3">
            <div class="row">

                <div class="col-12 p-2" >
                    <label>Author ID</label>
                    @Html.TextBoxFor(y => y.ID, new { @class = "form-control", @readonly = "readonly" })

                </div>
  
                <div class="col-6 p-2" >
                    <label>Author Name</label>
                    @Html.TextBoxFor(y => y.NAME, new { @class = "form-control" })

                </div>
                <div class="col-6 p-2" >
                    <label>Author Surname</label>
                    @Html.TextBoxFor(y => y.SURNAME, new { @class = "form-control" })

                </div>
     

                <div class="col-12 p-2" style="margin-bottom:15px">
                    <label>Author Details</label>
                    @Html.TextBoxFor(y => y.DETAIL, new { @class = "form-control" })

                </div>

            </div>
            <div class="row">
                <div class="col-2">
                    <button class="btn btn-warning">Update Author</button>
                </div>
            </div>




        </div>
            }

