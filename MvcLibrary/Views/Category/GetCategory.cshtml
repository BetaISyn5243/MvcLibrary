@model MvcLibrary.Models.Entity.TBLCATEGORY
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control " , @readonly= "readonly" })
        <br />
        <label>Kategori Adı</label>
        @*@Html.LabelFor(k => k.NAME)*@
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">
            Güncelle
        </button>
    </div>
}


