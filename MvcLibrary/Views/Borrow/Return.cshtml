@model MvcLibrary.Models.Entity.TBLACTION

@{
    ViewBag.Title = "Return";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Return Book</h2>


@using (Html.BeginForm("Return", "Admin/Borrow", FormMethod.Post))
{
    <div class="form-group container-fluid p-3">
        <div class="row" style=" margin-top: 15px">
            <div class="col-12 p-2">
                <label>Ödünç Tarihi
                @Html.TextBoxFor(b => b.TBLBOOK.NAME, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-12 p-2">
                <label>Kullanıcı Adı</label>
                @Html.TextBoxFor(b => b.TBLMEMBER.NAME, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-12 p-2">
                <label>Görevli Adı</label>
                @Html.TextBoxFor(b => b.TBLSTAFF.STAFF, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="col-4 p-2">
                <label>Ödünç Alınma Tarihi</label>
                @Html.TextBoxFor(b => b.BORROWDATE,"{0: dd.MM.yyyy}", new { @class = "form-control", @readonly = "readonly",  })
            </div>
            <div class="col-4 p-2">
                <label>Teslim Edilme Tarihi</label>
                @Html.TextBoxFor(b => b.RETURNDATE, "{0: dd/MM/yyyy}", new { @class = "form-control",@type="date" })
            </div>

        </div>
        <div class="row pt-4">
            <div class="col-2">
                <button class="btn btn-warning">Return Book</button>
            </div>
        </div>




    </div>
}
