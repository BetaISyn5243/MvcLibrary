@model MvcLibrary.Models.Entity.TBLSTAFF
@{
    ViewBag.Title = "GetStaff";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control ", @readonly = "readonly" })
        <br />
        <label>Staff Name</label>
        @Html.TextBoxFor(k => k.STAFF, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.STAFF, "", new { @class = "form-text ", @style = "color:red" })

    </div>
    <div>
        <button class="btn btn-warning">
            Update
        </button>
    </div>
}


