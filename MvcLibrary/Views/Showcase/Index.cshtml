@model MvcLibrary.Models.Classes.Class1
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <title>Kütüphane Uygulaması</title>
    <style>
        body {
            padding-top: 56px;
        }
        .spacing{
            height:100px
        }
        /* Footer stilleri */
        footer {
            background-color: #1ABC9C;
            color: white;
            padding: 50px 0;
        }

            footer a {
                color: #f8f9fa;
            }

                footer a:hover {
                    color: #007bff;
                }

            footer .social-icons a {
                color: white;
                margin-right: 15px;
                font-size: 20px;
            }
        .masthead {
            height: calc(100vh - 49px);
            background-color: #1ABC9C;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .masthead-avatar {
            width: 200px; /* İhtiyaca göre boyutunu ayarlayabilirsiniz */
            border-radius: 50%;
        }

        .divider-custom {
            position: relative;
            clear: both;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .divider-custom-line {
            width: 100%;
            height: 1px;
            margin: 0.5rem 0;
            background-color: rgba(255, 255, 255, 0.15);
        }

        .divider-custom-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-left: -1rem;
            margin-top: -1rem;
            background-color: #1ABC9C;
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            text-align: center;
            line-height: 2rem;
        }

        .masthead-subheading {
            font-weight: 300;
            margin-top: 2rem;
        }
        .independent-section {
            text-align: center;
            padding: 80px 0;
            background-color: #1ABC9C;
        }

            .independent-section img {
                width: 100px; /* İhtiyaca göre boyutunu ayarlayabilirsiniz */
                border-radius: 50%;
                margin-bottom: 20px;
            }
        .custom-nav-item {
            background-color: #1ABC9C; /* Arka plan rengi */
            border-radius: 5px; /* Border radius (köşe yuvarlatma) */
            margin-right: 10px; /* İhtiyaca göre sağ kenar boşluğu ayarlayabilirsiniz */
        }

        .custom-nav-link {
            color: white; /* Yazı rengi */
        }

            .custom-nav-link:hover {
                border-radius: 5px; /* Border radius (köşe yuvarlatma) */
                background-color: white;
                color: black; /* Hover durumunda yazı rengi */
            }
        .book-card {
            transition: transform 0.3s ease; /* Geçiş efekti için */
            overflow: hidden; /* Taşan içerikleri gizleme */
            border-radius: 10px; /* Köşe yuvarlatma */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Gölge */
        }

            .book-card:hover {
                transform: scale(1.04); /* Üzerine gelindiğinde büyüme efekti */
            }

        .book-image {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #dee2e6; /* Resim ile metin arasına ince bir çizgi */
        }

        .book-title {
            padding: 15px;
            text-align: center;
        }
    </style>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
</head>

<body data-bs-spy="scroll" data-bs-target="#navbar" data-bs-offset="56">

    <!-- Navbar -->
    <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Kütüphane Uygulaması</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#books">Kitaplarımız</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">İletişim</a>
                    </li>
                    <li class="nav-item custom-nav-item">
                        <a class="nav-link custom-nav-link" href="/Auth/Login">Giriş Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="masthead text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image -->
            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Kütüphanemize Hoş Geldiniz...</h1>
            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">"Çiçek dolu bir bahçe, kitap dolu bir ev"</p>
        </div>
    </header>
    <div class="spacing"></div>
    <!-- Portfolio Section -->
    <section class="page-section portfolio" id="books">
        <div>
            <div class="container">
                <!-- Portfolio Section Heading -->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Kitaplarımız</h2>
                <!-- Icon Divider -->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- Portfolio Grid Items -->

                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var x in Model.Deger1)
                    {
                        <div class="col">
                            <div class="card book-card">
                                <img src="https://via.placeholder.com/100" class="card-img-top book-image" alt="Book Image">
                                <div class="card-body book-title">
                                    <h5 class="card-title">@x.NAME</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col text-center mt-3">
                    <a href="/Auth/Login" class="btn" style="background-color:#1ABC9C">Daha Fazla Gör</a>
                </div>

                <!-- /.row -->
            </div>
        </div>
    </section>
    <div class="spacing"></div>

    <!-- About Section -->
    <section class="independent-section" id="about">
        <div class="container">
            <!-- Independent Section Content -->
            <h2 class="text-uppercase">Hakkımızda</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <p class="font-weight-light mb-0">
                @foreach (var x in Model.Deger2)
                {
                    @x.Description
                }

            </p>
        </div>
    </section>


    <div class="spacing"></div>

    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">
            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">İletişim</h2>
            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    @using (Html.BeginForm("Index", "Showcase", FormMethod.Post))
                    {
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Ad Soyad</label>
                                    <input class="form-control" id="name" name="NAME" type="text" placeholder="Adınız Soyadınız" required="required" data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Email Adresi</label>
                                    <input class="form-control" name="MAIL" id="email" type="email" placeholder="Mail Adresiniz" required="required" data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Mesaj Konusu</label>
                                    <input class="form-control" id="phone" type="tel" placeholder="Mesaj Konusu" name="TOPIC" required="required" data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Mesajınız</label>
                                    <textarea class="form-control" name="MESSAGE" id="message" rows="5" placeholder="Mesajınız" required="required" data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br>
                            <div id="success"></div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-xl" id="sendMessageButton" style="background-color:#1ABC9C">Gönder</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </section>
    <div class="spacing"></div>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h3>Kütüphane Uygulaması</h3>
                    <p>Selçuklu, Konya</p>
                </div>
               
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
